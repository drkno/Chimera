<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    >

<LinearLayout android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center_horizontal"
    >

  <Button
      android:id="@+id/StartScan"
      android:layout_width="100dp"
      android:layout_height="50dp"
      android:padding="1dp"
      android:text="@string/text_button_start" >
</Button>

  <Button android:id="@+id/StopScan" android:padding="1dp" android:layout_width="100dp" android:layout_height="50dp" android:text="@string/text_button_stop"></Button>
</LinearLayout>
    
<TextView
	android:id="@+id/scanresults"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text=""
    /><TextView
	android:id="@+id/textthing"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:text="@string/hello"
    />

</LinearLayout>
